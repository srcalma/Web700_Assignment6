<div class="container">
    <div class="row">
        <main class="col-md-12">

            <!-- Start your code here -->
            <form method="POST" action="/students/add" enctype="/students">
                <fieldset>
                    <legend>Personal Information</legend>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="firstName">First Name:</label>
                                <input class="form-control" name="firstName" type="text" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="lastName">Last Name:</label>
                                <input class="form-control" name="lastName" type="text" required />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="email">Email:</label>
                                <input class="form-control" name="email" type="email" required />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="addressStreet">Address (Street):</label>
                                <input class="form-control" name="addressStreet" type="text" required />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="addressCity">Address (City):</label>
                                <input class="form-control" name="addressCity" type="text" required />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="addressProvince">Address (Province):</label>
                                <input class="form-control" name="addressProvince" type="text" required />
                            </div>
                        </div>
                    </div>
                </fieldset>
                <fieldset>
                    <legend>Academic Information</legend>
                    <div class="row">
                        <div class="col-md-4">
                            <label>College Employment:</label><br />
                            <div class="form-check">
                                <input class="form-check-input" name="TA" type="checkbox" id="TA">
                                <label class="form-check-label" for="TA">
                                    Teaching Assistant
                                </label>
                            </div>
                            <br />
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Enrollment Status:</label><br />
                                <label class="checkbox-inline">
                                    <input type="radio" name="status" value="Full Time" /> Full Time
                                </label>
                                <label class="checkbox-inline">
                                    <input type="radio" name="status" value="Part Time" /> Part Time
                                </label>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="course">Enrolled in Course:</label>
                                {{#if courses}}
                                <select class="form-control" name="course" id="course">
                                    <option value="">Select Course</option>
                                    {{#each courses}}
                                    <option value="{{courseId}}">{{courseCode}}</option>
                                    {{/each}}
                                </select>
                                {{else}}
                                <div>No Courses</div>
                                {{/if}}

                            </div>
                        </div>
                    </div>
                </fieldset>
                <hr />
                <input type="submit" class="btn btn-primary float-right" target="_blank"
                    value="Add Student" /><br /><br /><br />
            </form>

            <!-- End your code here  -->

        </main>
    </div>
</div>
